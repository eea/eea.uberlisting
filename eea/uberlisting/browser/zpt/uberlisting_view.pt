<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="eea">

<body>
    <metal:content-core fill-slot="content-core">
        <metal:content define-macro="content-core">
        <metal:block use-macro="context/folder_listing/macros/content-core">
            <metal:entries fill-slot="entries">

            <metal:listing define-macro="listing" tal:define="smartView context/@@uberlisting_view">
                <ul id="smart-view-switch" class="eea-horizontal-list eea-no-list-style eea-rounded-corners" tal:define="templateName smartView/getTemplateName">
                    <li tal:attributes="class python:(templateName.endswith('folder_listing') and 'selected') or ''" data-templateId="smart_folder_listing">
                        <img i18n:attributes="title; alt" title="Listing" alt="Listing" src="folder_listing_icon.png"/>
                    </li>
                    <li tal:attributes="class python:(templateName.endswith('folder_summary_view') and 'selected') or ''" data-templateId="smart_folder_summary_view">
                        <img i18n:attributes="title; alt" title="Summary view" alt="Summary view" src="folder_summary_view_icon.png"/>
                    </li>
                    <li tal:attributes="class python:(templateName.endswith('atct_album_view') and 'selected') or ''" data-templateId="smart_atct_album_view">
                        <img  i18n:attributes="title; alt" title="Album view" alt="Album view" src="atct_album_view_icon.png"/>
                    </li>
                    <li tal:attributes="class python:(templateName.endswith('subfolder_view') and 'selected') or ''" data-templateId="smart_subfolder_view">
                        <img i18n:attributes="title; alt" title="Folder overview" alt="Folder overview" src="subfolder_view_icon.png"/>
                    </li>
                    <li tal:attributes="class python:(templateName.endswith('folder_tabs_view') and 'selected') or ''" data-templateId="smart_folder_tabs_view">
                        <img i18n:attributes="title; alt" title="Tabs view" alt="Tabs view" src="folder_tabs_view_icon.png"/>
                    </li>
                    <li tal:attributes="class python:(templateName.endswith('folder_accordion_view') and 'last selected') or 'last'" data-templateId="smart_folder_accordion_view">
                        <img i18n:attributes="title; alt" title="Accordion view" alt="Accordion view" src="folder_accordion_view_icon.png"/>
                    </li>
                </ul>
                <div id="smart-view-content">
                    <metal:block metal:use-macro="smartView/getListingMacro" />
                </div>
            </metal:listing>

            </metal:entries>
        </metal:block>

    </metal:content>
    </metal:content-core>
</body>
</html>


